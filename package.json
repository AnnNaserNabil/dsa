{
  "name": "dsa-notes",
  "version": "1.0.0",
  "description": "DSA Notes with Visualizations",
  "scripts": {
    "build:css": "tailwindcss -i ./themes/dsa-theme/assets/scss/main.scss -o ./themes/dsa-theme/static/css/main.css --minify",
    "watch:css": "tailwindcss -i ./themes/dsa-theme/assets/scss/main.scss -o ./themes/dsa-theme/static/css/main.css --watch",
    "build": "npm run build:css && hugo --minify",
    "dev": "npm run watch:css & hugo server -D"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
